<!-- ユーザー名のポップアップ -->
<div class="dropdown">
  <button aria-expanded="true" aria-haspopup="true" class="btn btn-default btn-lg" data-toggle="dropdown" id="dropdownMenu1" type="button">
    <span class="glyphicon glyphicon-align-justify"></span>
  </button>
  <ul aria-labelledby="dropdownMenu1" class="dropdown-menu">
    <li>
      <form action="/room_edit/<%= @room.id %>" method="post">
        <input style="background:transparent;text-decoration:underline;" type="submit" value="RoomSetting">
      </form>
    </li>
    <li>
      <form action="/room_logout/<%= @room.id %>" method="POST">
        <input style="background:transparent;text-decoration:underline;" type="submit" value="Logout">
      </form>
    </li>
</div>
  </ul>
  </div>


  <center>
    <form action="/chat" method="POST">
      <table style="width:50%">
        <tr>
          <td>
            <input type="text" class="form-control" name="chat" placeholder="とーきんぐ！">
            <input type="hidden" name="room_id" value="<%= @room.id %>">
          </td>
          <td>
            <input class="btn btn-default btn-sm" type="submit" value="送信">
          </td>
        </tr>
      </table>
    </form>
  </center>

  <table>
    <% @room.chats.each do |chat| %>
      <tr>
        <td title="<%= chat.user.name %>">
          <%= chat.user.name %>→
          <%= chat.text %>
        </td>
      </tr>
    <% end %>
  </table>
