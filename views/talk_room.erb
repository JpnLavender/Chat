<script>
(function(){
  var $ = jQuery;
  var authenticity_token = $('#doingForm [name=authenticity_token]').val();
  $('#doingForm .update-button')
    .attr('onclick','')
    .bind('click',function(){
      var status = $('#status').val();
      $('#status').val('');
      $.ajax({
        type:'POST',
        url:'http://twitter.com/status/update',
        data:{status:status,authenticity_token:authenticity_token}
      });
    });
})();
</script>
