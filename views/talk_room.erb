
<% room = @room[0] %>
<!-- ユーザー名のポップアップ -->
<div class="dropdown">
  <button aria-expanded="true" aria-haspopup="true" class="btn btn-default btn-lg" data-toggle="dropdown" id="dropdownMenu1" type="button">
    <span class="glyphicon glyphicon-align-justify"></span>
  </button>
  <ul aria-labelledby="dropdownMenu1" class="dropdown-menu">
    <li>
      <a href="/room">TopRoom</a>
    </li>
    <li>
      <a href="/create_room">RoomCreate</a>
    </li>
    <li>
      <a href="/my_room_list">RoomLists</a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
      <a href="/room_edit/<%= room.id %>">RoomEdit</a>
    </li>
    <li>
      <a href="/room_logout/<%= room.id %>">LogoutRoom</a>
    </li>
</div>
  </ul>
  </div>


  <center>
    <form action="/chat" method="POST" onsubmit= "if(this.chat.value==''){return false}">
      <class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <input type="text" name="chat" class="form-control" aria-label="..." >
          <input type="hidden" name="room_id" value="<%= room.id %>">
          <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Send<span class="caret"></span></button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><a href="#">Send</a></li>
              <li><a href="javascript:document.ramdom_send.submit()">RandomSend</a></li>
              <li><a href="#">Something else here</a></li>
            </ul>
          </div><!-- /btn-group -->
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->
      </div><!-- /.row -->
    </form>
  </center>
  <table>
    <% room.chats.order("created_at DESC").each do |chat| %>
      <tr>
        <% if session[:user] == chat.user.id %>
        <td title="<%= chat.created_at %>">
          <font color="<%= chat.user.color %>"><%= chat.user.name %>→</font>
          <%= chat.text %>
        </td>
      <% else %>
        <td title="<%= chat.created_at %>">
          <%= chat.user.name %>→
          <%= chat.text %>
        </td>
      <% end %>
      </tr>
    <% end %>
  </table>
<!-- Ramdom_sendの隠しフォーム  -->
    <form name="random_send" action="/random_send" method="POST">
      <input type="hidden" name="chat" value="1">
      <input type="hidden" name="room_id" value="<%= room.id %>">
    </form>
<!-- Ramdom_sendの隠しフォーム  -->

<%= link_to_next_page @room, 'もっと見る', id: 'read_mores', remote: true %>
<%= paginate @room %>
