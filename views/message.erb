<html lang="ja">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=Shift_JIS">
    <meta http-equiv="Content-Style-Type" content="text/css">
    <link rel="stylesheet" type="text/css" href="../base.css">
    <link rel="shortcut icon" href="./img/favicon.ico">
    <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css' href="base.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <title>error</title>
  </head>
  <body>
    <!-- Header -->
    <header class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <img class="navbar-brand" src="/img/LifeChatIcon.gif">
          <a class="navbar-brand" href="/">
            LifeChat
          </a>
        </div>

        <nav class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li>
                <!-- 検索バー -->
                <form action="/search" class="navbar-form navbar-left" method="get" role="search">
                  <div class="form-group">
                    <input class="form-control" name="search" placeholder="Search" type="text">
                  </div>
                  <button class="glyphicon glyphicon-search btn btn-default" type="submit"></button>
                </form>
              </li>
              <!-- 検索バーend -->

              <!-- ユーザー名のポップアップ -->
              <li>
                <div class="dropdown">
                  <button aria-expanded="true" aria-haspopup="true" class="btn btn-default" data-toggle="dropdown" style="margin-top:9;" id="dropdownMenu1" type="button">
                    @<%= User.find(session[:user]).user_name %>
                  <span class="glyphicon glyphicon-user"></span>
                  </button>
                  <ul aria-labelledby="dropdownMenu1" class="dropdown-menu">
                    <li>
                      <form action="/edit/<%= User.find(session[:user]).id %>" method="post">
                        <input style="background:transparent;text-decoration:underline;" type="submit" value="アカウント情報を変更">
                      </form>
                    </li>
                    <li>
                      <form action="/logout" method="get">
                        <input style="background:transparent;text-decoration:underline;" type="submit" value="ログアウト">
                      </form>
                    </li>
                </div>
              </li>
                  </ul>
      </div>
    <% else %>
      <li>
        <a class="inline" href="#inline-content">
          <span class="glyphicon glyphicon-log-in"></span>
          Sign_in
        </a>
        <div style="display: none;">
          <section id="inline-content">

            <div class="box1">
              <div class="input">
                <% if @user_true %>
                  <span class="list-group-item list-group-item-danger">パスワードまたはユーザー名が違うます</span>
                <% end %>
                <form action="/signin" id="form_1" method="POST">
                  <div class="form-title font">E-MailAddress or UserName</div>
                  <input aria-describedby="sizing-addon2" class="form-control" name="name" placeholder="@lifechat" type="text">
                  <br>
                  <div class="form-title font">Password</div>
                  <input class="form-control validate[required]" name="password" placeholder="パスワード" style="background:#fff;" type="password">
                  <br>
                  <br>
                  <div class="submit-container">
                    <input class="form-control submit-button" type="submit" value="ログイン">
                  </div>
                </form>
                <form action="password_change_send" method="get">
                  <input style="text-align:right;background:transparent;text-decoration:underline;margin:0px;padding: 0px;" type="submit" value="パスワードを忘れた方">
                </form>
                <hr>
                <p style="font-size:1px;text-align: left;">LifeChatを始めませんか？</p>
                <div class="submit-container">
                  <form action="/send_mail" method="get">
                    <input class="form-control submit-button" onclick="DisableButton(this);" type="submit" value="新規登録">
                  </form>
                </div>
              </div>
            </div>
          </section>
        </div>
      </li>
      <li>
        <a class="lightbox2" href="#content">
          <span class="glyphicon glyphicon-new-window"></span>
          Sign_up
        </a>
        </div>
        <div style="display:none">
          <div id="content">
            <div class="form-title">
              <div class="box1">
                <center>
                  <h1 stule="border-top:1px solid;padding:auto;margin:auto;">SIGNUP</h1>
                  <span id="red">
                    <% if @user_name_true %>
                      <span class="list-group-item list-group-item-danger">このメールアドレスはすでに使われています</span>
                    <% end %>
                  </span>
                </center>
              </div>
              <form action="/send_mail" id="form_1" method="POST">
                <form class="form-container">
                  <div class="form-title">E-MailAddress</div>
                  <input class="form-control validate[required,custom[email]]" name="email" placeholder="例)LifeChat@sample.com" style="background:#f5f5f5;" type="text"><br>
                  <br>
                  <div class="submit-container">
                    <input class="form-control submit-button" onclick="DisableButton(this);" type="submit" value="仮登録をする"><br>
                  </div>
                </form>
            </div>
          </div>
        </div>
        </div>
        </div>
      </li>
          </ul>
        </nav>
      <% end %>
    </header>
    </div>
    <!-- Header終了 -->
    <div  class="box3">
      <p>
      <%= @message.to_s %>
      </p>
      <p>
      <a href="/">
        トップページに戻る
      </a>
      </p>
    </div>
    </div>
  </body>
</html>
