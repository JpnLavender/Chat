<div class="container">
  <table class="table table-striped" style="background:#fff;">
    <% @alert_count.order("created_at DESC").each do |alert| %>
      <tr>
        <td>
          <%= alert.title %>
        </td>
          <td>
            <% if "#{alert.created_at.strftime("%Y-%m-%d")}" == "#{Time.now.strftime("%Y-%m-%d")}" %>
              今日
            <% elsif "#{alert.created_at}" < "#{1.days.since}" %>
              昨日
            <% elsif "#{alert.created_at}" < "#{7.days.since}" %>
              今週
            <% elsif "#{alert.created_at}" < "#{2.weeks.since}" %>
              先週
            <% elsif "#{alert.created_al}" < "#{3.weeks.since}" %>
              先々週
            <% else %>
              １か月以上前
            <% end %>

          </td>
          <td>
            <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <a href="/alert_delete/<%= alert.id %>">x</a>
          </td>
          </th>
        <% end %>
  </table>
</div>
