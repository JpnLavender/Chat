<!-- Bootstrapグリッド・システム -->
<div class="container">
  <div class="row">
    <% @list_all.order("created_at DESC").each do |room| %>
      <div class="col-md-3">
        <div class="demo-content bg-alt">
          <!-- <img src="#" class="img-rounded"> -->
          <ul>
            <a href="join_room/<%= room.id %>" title="RoomID=><%= room.id %>"> <li><%= room.name %></li> </a>
            <% room.users.each do |user| %>
              <table>
                <tr>
                  <td>
                    <%= user.name %>
                  </td>
                </tr>
              </table>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- Bootstrapグリッド・システム end -->

