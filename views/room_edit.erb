<style type="text/css">
table {
    width: 100%;
}
</style>

<center>
  <div class="font" style="color: #7b7a65;">
    <h1>EDIT</h1>
  </div>
  <h2>Room内容変更</h2>
</center>
<div class="box2">
  <form id="form_1" action="/room_renew/<%= @room.id %>" method="post">

    <label>Room名:</label>
    <input type="text" name="name" value="<%= @room.name %>" class="form-control validate[required,maxSize[20]]" placeholder="山田太郎" aria-describedby="sizing-addon2">

    <label>ユーザー一覧:</label>
    <div class="input-group">
      <table width="100%" class="table table-bordered">
        <th>
          名前
        </th>
        <th>
          ユーザー名
        </th>
        <th>
          自己紹介
        </th>
        <th>
          状態
        </th>
        <% @room.users.each do |user| %>
          <tr>
            <td>
              <%= user.name %>
            </td>
            <td>
              <p>@<%= user.user_name %></p>
            </td>
            <td>
              <%= user.introduction %>
            </td>
            <td>
              <% user.userrooms.each do |userroom| %>
                <%= userroom.status %>
              <% end %>
            </td>
            <td>
              <div class="btn-group">
                <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  権限
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <form action="/join_member_normal/<%= user.id %>/<%= @room.id %>" method="post">
                    <input type="submit" class="btn btn-default btn-sm" value="権限をなしにする">
                  </form>    
                  <form action="/join_member_admin/<%= user.id %>/<%= @room.id %>" method="post">
                    <input type="submit" class="btn btn-default btn-sm" value="管理者にする">
                  </form>
                  <form action="/join_member_delete/<%= user.id %>/<%= @room.id %>" method="post">
                    <input type="submit" class="btn btn-default btn-sm" value="退室させる">
                  </form>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

    <br>
    <p><input type="submit" value="編集完了" class="btn btn-default btn-sm btn-block"></p>
  </form>

  <br>

  <form id="form_1" action="/room_delete/<%= @room.id %>" method="post">
    <p><input type="submit" value="Room削除" class="btn btn-danger btn-sm btn-block"></p>
  </form>

</div>
</center>
