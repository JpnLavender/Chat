<style type="text/css">
/* グリッドを分かり易くするためのカラム背景色等レイアウト */
</style>

<br>
<br>
<% if @true_users %>
  <!-- Bootstrapグリッド・システム -->
  <div class="container">
    <div class="row">
      <% @search_users.each do |user| %>
        <div class="col-md-4">
          <div class="demo-content bg-alt" >
            <!-- <img src="#" class="img-rounded"> -->
            <ul>
              <li>
                <table>
                  <tr>
                    <td>
                      <p>
                      <%= user.name %>
                      </p>
                    </td>
                    <td>
                      <form action="/follow/<%= user.id %>" method="POST">
                        <button type="submit" style="margin-left:13;"class="btn btn-primary btn-sm glyphicon">
                          Friend
                        </button>
                      </form>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      @<%= user.user_name %>
                  </td>
                  </tr>
                </table>
              </li>
              <li><%= user.introduction %></li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
  <!-- Bootstrapグリッド・システム end -->
  <!-- Bootstrapグリッド・システム -->
  <% if @true_lists %>
    <div class="container">
      <div class="row">
        <% @search_lists.each do |room| %>
          <div class="col-md-4">
            <div class="demo-content bg-alt">
              <!-- <img src="#" class="img-rounded"> -->
              <ul>
                <a href="join_room/<%= room.id %>" title="RoomID=><%= room.id %>"> <li><%= room.name %></li> </a>
              </ul>
              <% room.users.each do |user| %>
                <ul>
                  <%= user.name %>
                </ul>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <!-- Bootstrapグリッド・システム end -->
