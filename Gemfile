# A sample Gemfile
source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-websocket'
gem 'sinatra-activerecord'
gem 'rake'
gem 'activerecord'
gem 'activesupport'
gem 'nokogiri'
gem 'cloudinary'
gem 'bcrypt'
gem 'dotenv'
gem 'pony'
gem 'redis'
gem 'kaminari', :require => 'kaminari/sinatra'
gem 'padrino-helpers'

